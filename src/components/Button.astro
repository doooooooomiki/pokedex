---
const {key, type, class: className} = Astro.props;
---

<button data-key={key} data-type={type} class:list={[className]} tabindex="-1">
  <svg width="100%" height="100%" viewBox="0 0 120 120" aria-hidden="true" preserveAspectRatio="none">
    <use href="#button-highlight" />

    {type === 'backspace' && 
      <svg overflow="visible" x="50%" y="50%" width="48" height="48" viewBox="0 0 24 24">
        <path transform="translate(-12 -12)" fill="var(--color-100-gray)" d="M22 3H7c-.69 0-1.23.35-1.59.88L0 12l5.41 8.11c.36.53.9.89 1.59.89h15c1.1 0 2-.9 2-2V5c0-1.1-.9-2-2-2zm0 16H7.07L2.4 12l4.66-7H22v14zm-11.59-2L14 13.41 17.59 17 19 15.59 15.41 12 19 8.41 17.59 7 14 10.59 10.41 7 9 8.41 12.59 12 9 15.59z"></path>
      </svg>
    }

  </svg>

  {type === 'key' &&
    <span>{key}</span>
  }

  {type === 'enter' &&
    <span>Enter</span>
  }
</button>
